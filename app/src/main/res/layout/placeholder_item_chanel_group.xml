<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_user_height"
    android:background="@color/background"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_weight="1"
        android:layout_marginEnd="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_screen_horizontal"
        android:background="@color/bg_custom_reaction_selected"/>

    <ImageView
        android:id="@+id/expand_arrow"
        android:layout_width="@dimen/touch_element_size"
        android:layout_height="@dimen/touch_element_size"
        android:layout_gravity="center"
        android:layout_marginEnd="30dp"
        android:contentDescription="@string/expand_group_content_description"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:tint="@color/bg_custom_reaction_selected" />
</LinearLayout>
